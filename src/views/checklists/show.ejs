<%- include('../layouts/header', {title: 'Tasks'}) %>

<%- include('../layouts/menu') %>

<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-four-fifths">
        <h1 class="title size-4"><%= checklist.name %></h1>
      </div>
      <div class="column is-one-fifth">
        <a href="add-task.html" class="button is-success is-small">New task</a>
        <a href="/checklists " class="button is-small">Back</a>
      </div>
    </div>

    <% tasks.forEach(task => { %>

    <hr/>
    <div class="columns">
      <div class="column is-four-fifths">
        <%= ' Name: ' + task.dataValues.name + ' | Description: ' + task.dataValues.description %>
      </div>

      <div class="column is-one-fifth">
        <button class="button is-link is-small">Done</button>
        <button class="button is-danger is-small">Remover</button>
      </div>
    </div>

    <% }) %>


  </div>
</section>


<%- include('../layouts/footer') %>
