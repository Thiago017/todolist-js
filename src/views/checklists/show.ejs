<%- include('../layouts/header', {title: 'Tasks'}) %>

<%- include('../layouts/menu') %>

<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-four-fifths">
        <h1 class="title size-4"><%= checklist.name %></h1>
      </div>
      <div class="column is-one-fifth">
        <a href="/checklists/<%= checklist.id %>/newtask" class="button is-success is-small">New task</a>
        <a href="/checklists" class="button is-small">Back</a>
      </div>
    </div>

    <% tasks.forEach(task => { %>

    <hr/>
    <div class="columns">
      <div class="column is-four-fifths">
        <%= ' Name: ' + task.name + ((task.description) ? ' | Description: ' + task.description : '') %>
      </div>

      <div class="column is-one-fifth">
        <a href="/tasks/<%= checklist.id %>/complete/<%= task.id %>?_method=PUT" class="button is-link is-small">Done</a>
        <a href="/tasks/<%= checklist.id %>/delete/<%= task.id %>?_method=DELETE" class="button is-danger is-small">Remover</a>
      </div>
    </div>

    <% }) %>


  </div>
</section>


<%- include('../layouts/footer') %>
